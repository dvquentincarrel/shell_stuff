{
    "dependencies": ["xrandr", "xset", "setxkbmap", "uname", "grep", "udiskie"],
    "installation": {
        "config": {
            "dir": "$HOME",
            "renamed_files": [
              { "src": "xprofile.sh", "dest": ".xprofile" },
              { "src": "xinit.sh", "dest": ".xinitrc" },
              { "src": "xsession.sh", "dest": ".xsession" },
              { "src": "xsession.sh", "dest": ".xsessionrc" }
            ]
        },
        "script": {
            "dir": "$HOME/.local/bin",
            "strip_ext": true,
            "files": ["random_wallpaper.bash"]
        }
    }
}
