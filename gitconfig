[user]
	name = dvquentincarrel
	email = dvquentincarrel@gmail.com
[init]
	defaultBranch = master
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[core]
	editor = vim
	trustctime = false
[commit]
    verbose = true
[merge]
	tool = vimdiff
[mergetool.vimdiff]
	layout = LOCAL,MERGED/REMOTE
	trustExitCode = false
[alias]
	root = rev-parse --show-toplevel
    unstage = restore --staged
    amend = commit --amend
    denselog = log --pretty=format:'%C(auto)%h  %C(blue)%an  %Creset%s %C(auto)%d' --graph
    allog = log --all --graph --stat
[pull]
	rebase = true
[fetch]
    prune = true
