build:
	@ln -s -$(clobber) $$PWD/aliases.sh $(bash_setup_dir)/001_aliases.sh
	@ln -s -$(clobber) $$PWD/init_func.sh $(bash_setup_dir)/002_init_func.sh
	@ln -s -$(clobber) $$PWD/options.bash $(bash_setup_dir)/003_options.bash
	@ln -s -$(clobber) $$PWD/setup_prompt.sh $(bash_setup_dir)/004_setup_prompt.sh
	@ln -s -$(clobber) $$PWD/variables.sh $(bash_setup_dir)/005_variables.sh
	@ln -s -$(clobber) $$PWD/misc_complete.bash $(bash_setup_dir)/500_misc_complete.bash
	@ln -s -$(clobber) $$PWD/profile.sh $$HOME/.profile
	@ln -s -$(clobber) $$PWD/bashrc.sh $$HOME/.bashrc
