{
    "dependencies": ["bash", "ps", "perl"],
    "installation": {
        "config": {
            "dir": "$HOME",
            "renamed_files": [
                { "src": "bashrc.sh", "dest": ".bashrc" },
                { "src": "profile.sh", "dest": ".profile" },
                { "src": "bash_profile.sh", "dest": ".bash_profile" }
            ]
        },
        "setup": {
            "dir": "$HOME/.config/bash/setup",
            "renamed_files": [
                { "src": "aliases.sh", "dest": "001_aliases.sh" },
                { "src": "init_func.sh", "dest": "002_init_func.sh" },
                { "src": "options.bash", "dest": "003_options.bash" },
                { "src": "setup_prompt.sh", "dest": "004_setup_prompt.sh" },
                { "src": "variables.sh", "dest": "005_variables.sh" },
                { "src": "misc_complete.bash", "dest": "500_misc_complete.bash" }
            ]
        }
    }
}
