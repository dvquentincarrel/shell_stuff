font pango:"JetBrainsMono NFM" 11px


# ===========
# | Startup |
# ===========

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
#exec --no-startup-id dex --autostart --environment i3

#	volume mixer in tray at first startup
exec --no-startup-id dbus-launch pasystray
#	compositor
exec --no-startup-id tpicom
#	dynamic wallpapers
exec --no-startup-id dyn_papes 30
# network manager
exec --no-startup-id nm-applet

# =================
# | Sound control |
# =================

# Use pactl to adjust volume in PulseAudio.
set $refresh_statusbar pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_statusbar
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_statusbar
# New kb binds
bindsym Shift+XF86AudioRaiseVolume exec change_volume global 3%+ && $refresh_statusbar
bindsym Shift+XF86AudioLowerVolume exec change_volume global 3%- && $refresh_statusbar
bindsym XF86AudioRaiseVolume exec app_vol +3%
bindsym XF86AudioLowerVolume exec app_vol -3%


# ========
# | Misc |
# ========

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+x exec $TERM_EMULATOR
bindsym $mod+space exec "$TERM_EMULATOR -e bash -c 'export NOMUXER=true; exec bash'"

# kill focused window
bindsym $mod+Shift+Q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run -fn 'pango-12px'
