{
    "dependencies": ["i3", "i3lock", "pgrep", "i3-nagbar", "shutdown", "i3-msg", "i3status"],
    "opt_dependencies": ["xclip"],
    "installation": {
        "i3_config": {
            "dir": "$HOME/.config/i3",
            "renamed_files": [
              { "src": "i3_config", "dest": "config" }
            ]
        },
        "i3status_config": {
            "dir": "$HOME/.config/i3status",
            "renamed_files": [
              { "src": "i3status_config", "dest": "config" }
            ]
        },
        "script": {
            "dir": "$HOME/.local/bin",
            "strip_ext": true,
            "files": ["lockscreen.bash"]
        }
    }
}
