# vim: ft=dosini

[weather]
command=curl -Ss 'https://wttr.in/Grenoble?format=4'
color=#B19CD9
interval=600

[interface/ip]
command=ip -brief addr | awk '/UP/ { gsub(/\/[0-9]+/, "", $3); printf "<span foreground=\"#FDFD96\">%s</span> %s\n", $1, $3 }'
markup=pango
interval=once

#[battery]

[volume]
command=i3bl_volume
interval=once
signal=10

[disk usage]
command=df -h --output=avail,size / | awk 'NR==2 {printf "ðŸ’¾ %s/%s\n", $1, $2 }'
interval=1

[cpu load]
# avg 1min load, used_cores/total_cores
command=i3bl_load /proc/loadavg
interval=1

[ram]
command=i3bl_memory /proc/meminfo
interval=1

[bat]
command=upower -i /org/freedesktop/UPower/devices/battery_BAT0 | awk '/percentage/ {printf("%sðŸ”‹", $2)}'
interval=5

[time]
command=date +"%Y-%m-%d %H:%M:%S"
interval=1
